<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.xts015.myapplication.HomeActivity">

    <include layout="@layout/toolbar"
        android:id="@+id/include2" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/cardDots"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/include2" />

    <android.support.v7.widget.CardView
        android:id="@+id/cardDots"
        android:foregroundGravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:id="@+id/shop_footer"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <View
                android:id="@+id/vertical_line"
                android:layout_width="1dp"
                android:layout_margin="2dp"
                android:layout_toLeftOf="@+id/hybrid_view"
                android:layout_height="40dp"
                android:background="#D3D3D3" />

            <TextView
                fontPath="@string/font"
                android:text="HYBRID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_margin="15dp"
                android:id="@+id/hybrid_view" />

            <LinearLayout
                android:id="@+id/shop_footer_sub"
                android:layout_width="wrap_content"
                android:visibility="gone"
                android:padding="5dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true">

                <TextView
                    fontPath="@string/font"
                    android:layout_width="wrap_content"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="ALL"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <View
                    android:layout_width="1dp"
                    android:layout_margin="2dp"
                    android:layout_height="match_parent"
                    android:background="#D3D3D3" />

                <TextView
                    fontPath="@string/font"
                    android:layout_width="wrap_content"
                    android:textColor="@color/text_color"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:text="COLLECTION"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/dots_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                fontPath="@string/font"
                android:id="@+id/label_apps"
                android:textColor="@color/text_color"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:text="APPS"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />


            <android.support.design.widget.TabLayout
                android:id="@+id/tabDots"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:tabIndicatorColor="#d4d2d2"
                app:tabSelectedTextColor="@color/md_black_1000"
                app:tabBackground="@drawable/tab_selector"
                app:tabGravity="center"
                app:tabIndicatorHeight="0dp" />

            <TextView
                fontPath="@string/font"
                android:id="@+id/label_shops_home"
                android:layout_width="wrap_content"
                android:textColor="@color/text_color"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:visibility="gone"
                android:text="SHOP"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

            <TextView
                fontPath="@string/font"
                android:id="@+id/shop_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/text_color"
                android:padding="5dp"
                android:visibility="gone"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:text="SHOP"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>


